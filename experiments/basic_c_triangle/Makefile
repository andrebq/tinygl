##########################################################################
# Makefile for GLFW example programs on X11 (generated by compile.sh)
##########################################################################
CC     = cc
CFLAGS = -pthread -O2 -Wall
LIB      = -lglfw
LFLAGS   = $(LIB)    -lX11 -lGLU   -lGL -pthread -lm -lrt

BINARIES = triangle

all: $(BINARIES)

triangle: triangle.c 
	$(CC) $(CFLAGS) triangle.c $(LFLAGS) -o $@

clean:
	rm -f $(BINARIES)

